<div class="columns">
  <aside class="column is-one-quarter menu">
    <p class="menu-label">
      Singers
    </p>
    <ul class="menu-list">
      {{#each sortedSingers as |singer|}}
        <li>{{#link-to "singers.singer" singer class="list-group-item" activeClass="is-active"}}
          {{singer-badge singer=singer}}
        {{/link-to}}</li>
      {{/each}}
    </ul>
  </aside>
  <div class="column is-three-quarters">
    {{outlet}}
  </div>
</div>
