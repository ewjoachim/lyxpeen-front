<div class="field">
  <div class="control">
    {{input
      class="input is-large"
      type="text"
      placeholder="Singer name"
      value=model.user.name}}
  </div>
</div>

<div class="field is-horizontal">
  <div class="field-label">
    <label class="label">Is active</label>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <label class="checkbox">
          {{input type="checkbox" checked=model.isActive}}
          {{if model.isActive "yes" "no"}}
        </label>
      </div>
    </div>
  </div>
</div>


<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label">Voice section</label>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        {{#power-select
          selected=model.mainSection
          options=sections
          onchange=(action (mut model.mainSection))
          tagName=div
          class="select is-fullwidth"
          as |section|
        }}
          {{section.name}}
        {{/power-select}}
      </div>
    </div>
  </div>
</div>

<div class="field is-grouped">
  <p class="control">
    <a class="button is-success" {{action "save"}}>Save</a>
  </p>
  <p class="control">
    <a class="button is-link" {{action "cancel"}}>Cancel</a>
  </p>
</div>
