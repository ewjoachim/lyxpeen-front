<div class="modal is-active">
  <div class="modal-background" {{action "cancel"}}></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">
        {{input class="modal-card-title" type="text" placeholder="Voice name" value=model.songPart.name}}
      </p>
      <button class="delete" {{action "cancel"}}></button>
    </header>
    <section class="modal-card-body">
      <h4 class="is-4">They sing this voice</h4>
      {{#each mainSingers as |singer|}}
        {{singer-badge singer=singer}}
      {{/each}}
      {{#power-select
          options=selectableSingers
          onchange=(action 'test')
          as |singer|}}
        {{singer-badge singer=singer}}
      {{/power-select}}
      <h4 class="is-4">They can also sing this voice</h4>
        {{#each additionalSingers as |singer|}}
          {{singer-badge singer=singer}}
        {{/each}}
        {{#power-select
          options=selectableSingers
          onchange=(action 'test')
          as |singer|}}
        {{singer-badge singer=singer}}
      {{/power-select}}
    </section>
    <footer class="modal-card-foot">
      <a class="button is-success" {{action "validate"}} disabled={{isValidateDisabled}}>Save changes</a>
      <a label="button" {{action "cancel"}}>Cancel</a>
    </footer>
  </div>
  <button class="modal-close is-large"></button>
</div>
